// This is your Prisma schema file
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Patient {
  id         String    @id @default(uuid())
  firstName  String
  middleName String
  lastName   String
  queryName  String
  dob        String // YYYY-MM-DD
  status     String // Inquiry, Onboarding, Active, Churned
  addresses  Address[]

  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  AdditionalFieldResponse AdditionalFieldResponse[]
}

model Address {
  id        String   @id @default(uuid())
  patient   Patient  @relation(fields: [patientId], references: [id])
  patientId String
  line1     String
  line2     String
  zip       String
  city      String
  state     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AdditionalField {
  id                      String                    @id @default(uuid())
  name                   String
  type                    String // Text, Number
  // Soft deletes to prevent data loss
  deleted                 Boolean                   @default(false)
  createdAt               DateTime                  @default(now())
  updatedAt               DateTime                  @updatedAt
  AdditionalFieldResponse AdditionalFieldResponse[]
}

model AdditionalFieldResponse {
  id        String          @id @default(uuid())
  patient   Patient         @relation(fields: [patientId], references: [id])
  patientId String
  field     AdditionalField @relation(fields: [fieldId], references: [id])
  fieldId   String
  value     String
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt
}
